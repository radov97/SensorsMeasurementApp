<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="localhost.dev.liverpoolsensorsfusion">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_sensorfusion"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_sensorfusion"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mainmenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".lanternactivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SensorsSpecsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HelpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RecordDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SensorsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gravity_activity"
            android:screenOrientation="portrait" />
        <activity android:name=".accelerometer_activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".gyroscope_activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".magnetometer_activity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>